{
  "name": "sea-map",
  "version": "1.2.3",
  "description": "A web application for mapping initiatives in the Solidarity Economy",
  "main": "www/map-app/app/main.js",
  "config": {
    "deploy_to": "",
    "deploy_user": "www-data",
    "deploy_group": "www-data"
  },
  "engines": {
    "npm": ">=6.5.0"
  },
  "bin": {
    "generate-version": "bin/generate-version",
    "sea-site-build": "bin/sea-site-build",
    "sea-site-deploy": "bin/sea-site-deploy"
  },
  "scripts": {
    "lint": "eslint www/map-app/**/*.js",
    "browser-tests": "karma start --single-run --browsers FirefoxHeadless",
    "mocha-tests": "instant-mocha --webpack-config mocha-webpack.config.js --full-trace test/mocha-all.js",
    "test": "npm run mocha-tests && npm run browser-tests",
    "generate-config-doc": "bin/generate-config-doc >CONFIG.md",
    "build": "bin/sea-site-build -c ext/config -m ./ -d ext/build ext/src/*",
    "build-windows": "node bin/sea-site-build -c ext/config -m ./ -d ext/build ext/src/",
    "server": "php -t ext/build/out -S localhost:8080",
    "webpack": "webpack",
    "server2": "php -t dist -S localhost:8080",
    "public-server": "php -t ext/build/out -S 0.0.0.0:8080",
    "dev-deploy": "bin/sea-site-deploy -f ext/build/out/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:SolidarityEconomyAssociation/sea-map.git"
  },
  "keywords": [
    "mapping",
    "solidarity",
    "economy",
    "semantic",
    "web"
  ],
  "author": "Solidarity Economy Association",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/SolidarityEconomyAssociation/sea-map/issues"
  },
  "homepage": "https://github.com/SolidarityEconomyAssociation/sea-map#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.2.7",
    "d3": "^5.7.0",
    "file-loader": "^6.2.0",
    "leaflet": "^1.5.1",
    "leaflet-active-area": "^1.1.0",
    "leaflet-contextmenu": "^1.4.0",
    "leaflet.awesome-markers": "^2.0.5",
    "leaflet.markercluster": "^1.5.1",
    "mini-css-extract-plugin": "^1.6.2",
    "minimist": "^1.2.5",
    "postal": "^2.0.6",
    "style-loader": "^2.0.0",
    "webpack": "^5.53.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^8.8.0",
    "instant-mocha": "^1.3.1",
    "karma": "^6.3.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.2.0",
    "webpack-cli": "^4.8.0"
  }
}
